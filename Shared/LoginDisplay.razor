<AuthorizeView>
    <Authorized>
        <div class="row" align="right" alignv="center">
            <div class="col" align="left">
                <!------------------------->
                <!-- logotipo da Clínica -->
                <!------------------------->
                <table>
                    <tr>
                        <td><img src="/images/LogoMedio.png" width="50" /></td>
                        <td>
                            <table>
                                <tr><td><img src="/images/ViaRapida2.png" width="400" /></td></tr>
                                @*<tr><td><span><b>Clínica de Medicina e Psicologia do Trânsito</b></span></td></tr>*@
                            </table>
                        </td>
                    </tr>
                </table>
            </div>
            <div class="col" align="right">
                <table>
                    <tr>
                        <td>
                            <div class="dropdown show">
                              <button class="btn btn-primary btn-sm" disabled>Psicólogo</button>
                              <a class="dropdown-toggle" href="Identity/Account/Manage" id="dropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                <img src="https://mdbcdn.b-cdn.net/img/Photos/Avatars/img (31).webp" class="rounded-circle" height="35" loading="lazy" />
                              </a>

                              <div class="dropdown-menu" aria-labelledby="dropdownMenuLink">
                                <a class="dropdown-item" href="#">Action</a>
                                <a class="dropdown-item" href="#">Another action</a>
                                <a class="dropdown-item" href="#">Something else here</a>
                              </div>
                            </div>
                        </td>
                        <td>
                            <span>@context.User.Identity?.Name</span>
                        </td>
                        <td>
                            <form method="post" action="Identity/Account/LogOut">
                                <button type="submit" class="nav-link btn btn-link">Log out</button>
                            </form>
                        </td>
                        <td>
                            <a href="https://docs.microsoft.com/aspnet/" target="_blank">About</a>
                        </td>
                    </tr>
                </table>
            </div>
        </div>

    </Authorized>
    <NotAuthorized>
        <a href="Identity/Account/Register">Register</a>
        <a href="Identity/Account/Login">Log in</a>
    </NotAuthorized>
</AuthorizeView>
