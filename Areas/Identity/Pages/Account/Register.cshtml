@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}

<div align="center" > 
	<div>&nbsp;</div>
	<div class="card" style='width: 340px;'>
		<img class="card-img-top" src="/images/identity/DescricaoSistema.png" style='padding: 0px 50px 10px 50px;'> @* top right bottom left*@
		<h5>Criar um novo usuário</h5>

		<div class="card-body" align="left">
			<form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">
				<div asp-validation-summary="ModelOnly" class="text-danger"></div>

				<div class="row">
					<div class="col-2" align="right">
						<img src="/images/identity/Usuario.png" style='padding-top:30px'>
					</div>
					<div class="form-group col-10">
						<label asp-for="Input.Email"></label>
						<input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" />
						<span asp-validation-for="Input.Email" class="text-danger"></span>
					</div>
				</div>

				<div class="row">
					<div class="col-2" align="right">
						<img src="/images/identity/Senha.png" style='padding-top:30px'>
					</div>
					<div class="form-group col-10">
						<label asp-for="Input.Password">Senha</label>
						<input asp-for="Input.Password" class="form-control" autocomplete="new-password" aria-required="true" />
						<span asp-validation-for="Input.Password" class="text-danger"></span>
					</div>
				</div>

				<div class="row">
					<div class="col-2" align="right"></div>
					<div class="form-group col-10">
						<label asp-for="Input.ConfirmPassword">Confirmação da Senha</label>
						<input asp-for="Input.ConfirmPassword" class="form-control" autocomplete="new-password" aria-required="true" />
						<span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
					</div>
				</div>

				<br />
				<div align="center" class="row">
					<div class="col-2">&nbsp;</div>
					<div class="col-9">
                        <button id="registerSubmit" type="submit" class="w-100 btn btn-lg btn-info">Registrar</button>
					</div>
				</div>
			</form>

		</div>
	</div>
	<br />
	<a href="/">Sair sem efetuar o registro.</a>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
